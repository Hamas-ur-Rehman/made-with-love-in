.badge-generator
	border-radius 7px
	padding 20px
	border 2px solid #e6e6e6

	h2
		font-size 24px
		color #222
		margin-bottom 20px

	h3
		margin 20px 0
		font-size 22px
		color #222

	h4
		margin 10px 0
		font-size 19px
		color #333

	.country-selection
		justify-content flex-start

		label
			margin 10px 10px 10px 0
			font-size 19px
			color #333
			font-weight bold

	.option
		justify-content flex-start
		margin 5px 0

		label
			width 150px

		select
			text-transform capitalize

	.svg
		width 100%
		overflow-x auto

		img
			vertical-align top

	.output
			justify-content flex-start

			.copy-btn
				cursor pointer
				margin-left 10px
				padding 5px
				border-radius 5px
				font-size 12px
				color #888
				border 2px solid #aaa
				font-weight bold
				letter-spacing 1px

				&:hover
					color #666
					border-color #888

	.code
		background #e6e6e6
		width 100%
		border-radius 4px
		overflow-x auto

		pre
			padding 10px
			font-size 16px
			display inline-block
